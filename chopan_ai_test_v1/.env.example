# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/chopan_ai

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration (for S3 snapshots)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=chopan-ai-snapshots

# Email Service Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# Service URLs (for local development)
CONTENT_SERVICE_URL=http://localhost:8001
EMAIL_SERVICE_URL=http://localhost:8002
SOCIAL_SERVICE_URL=http://localhost:8003
PROSPECT_SERVICE_URL=http://localhost:8004

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DEBUG=True